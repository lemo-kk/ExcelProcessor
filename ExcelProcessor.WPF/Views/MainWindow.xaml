<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ExcelProcessor.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Excel Processor - 数据处理工具" 
        Height="1000" Width="1200"
        MinHeight="600" MinWidth="900"
        MaxHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
        MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource DarkGrayBrush}"
        TextElement.Foreground="White"
        FontFamily="Segoe UI"
        Closing="Window_Closing"
        Closed="Window_Closed">
        
        <!-- 自定义标题栏样式 -->
        <Window.Style>
            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource NavigationGradient}" />
                <Setter Property="TextElement.Foreground" Value="White" />
            </Style>
        </Window.Style>

    <Window.Resources>
        <!-- 现代化导航按钮样式 -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="24,16" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="MinHeight" Value="48" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center" />
                                <Border x:Name="Underline" 
                                        Height="3" 
                                        Background="{StaticResource ButtonHoverGradient}"
                                        VerticalAlignment="Bottom"
                                        CornerRadius="2"
                                        Opacity="0" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="#2A2A3F" />
                                <Setter TargetName="Underline" Property="Opacity" Value="0.8" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource CyberBlue}" BlurRadius="12" ShadowDepth="0" Opacity="0.3" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A4F" />
                                <Setter TargetName="Underline" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 激活的导航按钮样式 -->
        <Style x:Key="ActiveNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource ButtonHoverGradient}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{StaticResource CyberBlue}" BlurRadius="16" ShadowDepth="0" Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 现代化紧凑导航按钮样式 -->
        <Style x:Key="CompactNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinWidth" Value="70" />
            <Setter Property="MinHeight" Value="40" />
        </Style>

        <!-- 现代化紧凑激活导航按钮样式 -->
        <Style x:Key="CompactActiveNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource CompactNavigationButtonStyle}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource ButtonHoverGradient}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="MinWidth" Value="70" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{StaticResource CyberBlue}" BlurRadius="12" ShadowDepth="0" Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 现代化顶部导航栏 -->
        <Border Grid.Row="0" 
                Background="{StaticResource NavigationGradient}"
                BorderBrush="{StaticResource CyberBlueBrush}"
                BorderThickness="0,0,0,2"
                Effect="{StaticResource MaterialDesignElevationShadow4}">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" MinWidth="600" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 现代化Logo和标题 -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Margin="20,8">
                    <Border Background="{StaticResource ButtonHoverGradient}"
                            CornerRadius="12"
                            Padding="8"
                            Effect="{StaticResource MaterialDesignElevationShadow2}">
                        <materialDesign:PackIcon Kind="TableLarge" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="White"
                                               VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Excel Processor" 
                                 FontSize="20" 
                                 FontWeight="Bold"
                                 Foreground="White"
                                 VerticalAlignment="Center" />
                        <TextBlock Text="数据处理工具" 
                                 FontSize="12" 
                                 FontWeight="Normal"
                                 Foreground="#CCCCCC"
                                 VerticalAlignment="Center"
                                 Margin="0,2,0,0" />
                    </StackPanel>
                </StackPanel>

                <!-- 导航菜单 -->
                <ScrollViewer Grid.Column="1" 
                             HorizontalScrollBarVisibility="Disabled" 
                             VerticalScrollBarVisibility="Disabled"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0">
                    
                    <Button x:Name="HomeButton" 
                            Content="首页" 
                            Style="{StaticResource CompactActiveNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="Home" 
                            Margin="2,0" />
                    
                    <Button x:Name="ExcelImportButton" 
                            Content="Excel配置" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="ExcelImport"
                            Margin="2,0" />
                    
                    <Button x:Name="SqlManagementButton" 
                            Content="SQL管理" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="SqlManagement"
                            Margin="2,0" />
                    
                    <Button x:Name="JobManagementButton" 
                            Content="作业管理" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="JobManagement"
                            Margin="2,0" />
                    
                    <Button x:Name="DataSourceButton" 
                            Content="数据源" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="DataSource"
                            Margin="2,0" />
                    
                    <Button x:Name="ImportExportButton" 
                            Content="导入导出" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="ImportExport"
                            Margin="2,0" />
                    
                    <Button x:Name="SystemSettingsButton" 
                            Content="系统设置" 
                            Style="{StaticResource CompactNavigationButtonStyle}"
                            Click="NavigationButton_Click"
                            Tag="SystemSettings"
                            Margin="2,0" />
                    </StackPanel>
                </ScrollViewer>

                <!-- 现代化用户信息区域 -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Margin="20,8">
                    <!-- 用户信息卡片 -->
                    <Border Background="{StaticResource UserCardGradient}"
                            CornerRadius="12"
                            Padding="16,12"
                            Margin="0,0,12,0"
                            Effect="{StaticResource MaterialDesignElevationShadow2}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource ButtonHoverGradient}"
                                    CornerRadius="20"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Account" 
                                                       Width="18" 
                                                       Height="18"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUserDisplayName}" 
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         Foreground="White"
                                         VerticalAlignment="Center" />
                                <TextBlock Text="{Binding CurrentUserRole}" 
                                         FontSize="11"
                                         Foreground="{StaticResource CyberBlueBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,2,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 现代化退出按钮 -->
                    <Border Background="#FF4D4F"
                            CornerRadius="20"
                            Width="40"
                            Height="40"
                            Effect="{StaticResource MaterialDesignElevationShadow2}">
                        <Button x:Name="LogoutButton"
                              Style="{StaticResource MaterialDesignIconButton}"
                              Background="Transparent"
                              Foreground="White"
                              Width="40"
                              Height="40"
                              ToolTip="退出登录"
                              Click="LogoutButton_Click">
                            <materialDesign:PackIcon Kind="Logout" 
                                                   Width="20" 
                                                   Height="20" />
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Border Grid.Row="1" 
                Background="{StaticResource DarkGrayBrush}"
                Margin="8">
            <Frame x:Name="MainContentFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent" />
        </Border>

        <!-- 弹出窗遮罩层 -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                x:Name="DialogOverlay"
                Background="#80000000"
                Visibility="Collapsed">
            <Grid x:Name="DialogContainer" />
        </Border>
    </Grid>
</Window> 
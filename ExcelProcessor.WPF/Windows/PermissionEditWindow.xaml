<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ExcelProcessor.WPF.Windows.PermissionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding WindowTitle}"
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource MaterialDesignPaper}"
        TextElement.Foreground="{StaticResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{StaticResource MaterialDesignFont}">

    <Window.Resources>
        <Style x:Key="PermissionGroupStyle" TargetType="Expander" BasedOn="{StaticResource MaterialDesignExpander}">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Background" Value="{StaticResource MaterialDesignCardBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource MaterialDesignDivider}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="PermissionItemStyle" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="PermissionTypeChipStyle" TargetType="Border">
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="Background" Value="{StaticResource MaterialDesignPrimary}" />
        </Style>

        <Style x:Key="FormButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{StaticResource MaterialDesignCardBackground}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <materialDesign:PackIcon Kind="ShieldAccount" 
                                           Width="24" 
                                           Height="24" 
                                           Foreground="{StaticResource MaterialDesignPrimary}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0" />
                    <TextBlock Text="{Binding WindowTitle}" 
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="{Binding WindowDescription}" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Foreground="{StaticResource MaterialDesignBodyLight}" />
            </StackPanel>
        </Border>

        <!-- 目标信息 -->
        <Border Grid.Row="1" 
                Background="{StaticResource MaterialDesignCardBackground}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 目标图标 -->
                <materialDesign:PackIcon Grid.Column="0"
                                       Kind="{Binding TargetIcon}"
                                       Width="32" 
                                       Height="32" 
                                       Foreground="{StaticResource MaterialDesignPrimary}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0" />

                <!-- 目标信息 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TargetName}" 
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Margin="0,0,0,4" />
                    <TextBlock Text="{Binding TargetDescription}" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{StaticResource MaterialDesignBodyLight}" />
                </StackPanel>

                <!-- 权限统计 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource MaterialDesignPrimary}"
                          CornerRadius="12"
                          Padding="8,4"
                          Margin="0,0,8,0">
                        <TextBlock Text="{Binding GrantedPermissionsCount}" 
                                 Foreground="White"
                                 FontWeight="Bold"
                                 FontSize="14" />
                    </Border>
                    <TextBlock Text="已授权" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 权限列表 -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- 权限筛选 -->
                <Border Background="{StaticResource MaterialDesignCardBackground}"
                      CornerRadius="8"
                      Padding="16"
                      Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 搜索框 -->
                        <TextBox Grid.Column="0"
                               x:Name="SearchTextBox"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               materialDesign:HintAssist.Hint="搜索权限..."
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                        <!-- 权限类型筛选 -->
                        <ComboBox Grid.Column="2"
                                x:Name="TypeFilterComboBox"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                materialDesign:HintAssist.Hint="权限类型"
                                ItemsSource="{Binding PermissionTypes}"
                                SelectedItem="{Binding SelectedPermissionType}"
                                DisplayMemberPath="Name"
                                SelectedValuePath="Value" />

                        <!-- 全选/取消全选 -->
                        <StackPanel Grid.Column="4" Orientation="Horizontal">
                            <Button x:Name="SelectAllButton"
                                  Content="全选"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Click="SelectAllButton_Click"
                                  Margin="0,0,8,0" />
                            <Button x:Name="ClearAllButton"
                                  Content="清空"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Click="ClearAllButton_Click" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 权限分组 -->
                <ItemsControl ItemsSource="{Binding PermissionGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Style="{StaticResource PermissionGroupStyle}"
                                    IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding GroupName}" 
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 VerticalAlignment="Center" />
                                        <Border Background="{StaticResource MaterialDesignPrimary}"
                                              CornerRadius="8"
                                              Padding="6,2"
                                              Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Permissions.Count}" 
                                                     Foreground="White"
                                                     FontSize="10"
                                                     FontWeight="Bold" />
                                        </Border>
                                    </StackPanel>
                                </Expander.Header>
                                
                                <ItemsControl ItemsSource="{Binding Permissions}" Margin="16">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!-- 权限复选框 -->
                                                <CheckBox Grid.Column="0"
                                                        Style="{StaticResource PermissionItemStyle}"
                                                        IsChecked="{Binding IsGranted, UpdateSourceTrigger=PropertyChanged}" />

                                                <!-- 权限信息 -->
                                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Name}" 
                                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                             FontWeight="Medium" />
                                                    <TextBlock Text="{Binding Description}" 
                                                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                             Foreground="{StaticResource MaterialDesignBodyLight}"
                                                             TextWrapping="Wrap" />
                                                </StackPanel>

                                                                <!-- 权限类型标签 -->
                <Border Grid.Column="2"
                    Style="{StaticResource PermissionTypeChipStyle}"
                    Background="{Binding TypeColor}">
                    <TextBlock Text="{Binding TypeName}"
                             Foreground="White"
                             FontSize="10"
                             FontWeight="Medium"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center" />
                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮栏 -->
        <Border Grid.Row="3" 
                Background="{StaticResource MaterialDesignCardBackground}"
                CornerRadius="8"
                Padding="20"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 权限统计 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="总计：" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TotalPermissionsCount}" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             FontWeight="Bold"
                             Foreground="{StaticResource MaterialDesignPrimary}"
                             Margin="4,0,0,0"
                             VerticalAlignment="Center" />
                    <TextBlock Text="个权限，" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="4,0,0,0"
                             VerticalAlignment="Center" />
                    <TextBlock Text="{Binding GrantedPermissionsCount}" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             FontWeight="Bold"
                             Foreground="{StaticResource MaterialDesignPrimary}"
                             Margin="4,0,0,0"
                             VerticalAlignment="Center" />
                    <TextBlock Text="个已授权" 
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Margin="4,0,0,0"
                             VerticalAlignment="Center" />
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="CancelButton"
                          Content="取消"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Click="CancelButton_Click" />
                    
                    <Button x:Name="SaveButton"
                          Content="保存权限"
                          Style="{StaticResource FormButtonStyle}"
                          Click="SaveButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 
<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ExcelProcessor.WPF.Dialogs.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:models="clr-namespace:ExcelProcessor.Models;assembly=ExcelProcessor.Models"
        Title="{Binding DialogTitle}" 
        Width="600" 
        Height="700"
        MinWidth="500" 
        MinHeight="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkGrayBrush}"
        TextElement.Foreground="White"
        FontFamily="Segoe UI"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 输入框样式 -->
        <Style x:Key="MaterialDesignOutlinedTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,8,0,0" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="DialogButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="100" />
        </Style>

        <!-- 取消按钮样式 -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlueBrush}" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountEdit" 
                                       Width="24" 
                                       Height="24" 
                                       Foreground="{StaticResource CyberBlueBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0" />
                <TextBlock Text="{Binding DialogTitle}" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- 主要内容 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24">
            <StackPanel>
                <!-- 基本信息 -->
                <GroupBox Header="基本信息" 
                          Style="{StaticResource MaterialDesignGroupBox}"
                          Margin="0,0,0,20">
                    <StackPanel>
                        <!-- 用户名 -->
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.Hint="用户名 *"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}" />
                        
                        <!-- 显示名称 -->
                        <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.Hint="显示名称 *"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                        
                        <!-- 邮箱 -->
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.Hint="邮箱地址 *"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                    </StackPanel>
                </GroupBox>

                <!-- 密码设置 -->
                <GroupBox Header="密码设置" 
                          Style="{StaticResource MaterialDesignGroupBox}"
                          Margin="0,0,0,20">
                    <StackPanel>
                        <!-- 密码 -->
                        <PasswordBox x:Name="PasswordBox"
                                   materialDesign:HintAssist.Hint="密码 *"
                                   Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                   Margin="0,8,0,0" />
                        
                        <!-- 确认密码 -->
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                   materialDesign:HintAssist.Hint="确认密码 *"
                                   Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                   Margin="0,8,0,0" />
                        
                        <!-- 密码强度指示器 -->
                        <StackPanel Orientation="Horizontal" 
                                  Margin="0,8,0,0"
                                  Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}">
                            <TextBlock Text="密码强度：" 
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0" />
                            <Border Background="{Binding PasswordStrength, Converter={StaticResource PasswordStrengthToBrushConverter}}"
                                  CornerRadius="4"
                                  Padding="8,4"
                                  MinWidth="60">
                                <TextBlock Text="{Binding PasswordStrength, Converter={StaticResource PasswordStrengthToTextConverter}}"
                                         Foreground="White"
                                         FontSize="12"
                                         HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 角色和权限 -->
                <GroupBox Header="角色和权限" 
                          Style="{StaticResource MaterialDesignGroupBox}"
                          Margin="0,0,0,20">
                    <StackPanel>
                        <!-- 角色选择 -->
                        <ComboBox SelectedValue="{Binding SelectedRole}"
                                materialDesign:HintAssist.Hint="用户角色 *"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Margin="0,8,0,0">
                            <ComboBoxItem Content="超级管理员" Tag="{x:Static models:UserRole.SuperAdmin}" />
                            <ComboBoxItem Content="管理员" Tag="{x:Static models:UserRole.Admin}" />
                            <ComboBoxItem Content="普通用户" Tag="{x:Static models:UserRole.User}" />
                        </ComboBox>
                        
                        <!-- 用户状态 -->
                        <ComboBox SelectedValue="{Binding SelectedStatus}"
                                materialDesign:HintAssist.Hint="用户状态 *"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                Margin="0,8,0,0">
                            <ComboBoxItem Content="激活" Tag="{x:Static models:UserStatus.Active}" />
                            <ComboBoxItem Content="非活跃" Tag="{x:Static models:UserStatus.Inactive}" />
                            <ComboBoxItem Content="锁定" Tag="{x:Static models:UserStatus.Locked}" />
                        </ComboBox>
                        
                        <!-- 是否启用 -->
                        <CheckBox Content="启用用户账户"
                                IsChecked="{Binding IsEnabled}"
                                Style="{StaticResource MaterialDesignCheckBox}"
                                Margin="0,16,0,0" />
                    </StackPanel>
                </GroupBox>

                <!-- 其他信息 -->
                <GroupBox Header="其他信息" 
                          Style="{StaticResource MaterialDesignGroupBox}">
                    <StackPanel>
                        <!-- 备注 -->
                        <TextBox Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.Hint="备注信息"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"
                               Height="80"
                               VerticalScrollBarVisibility="Auto" />
                    </StackPanel>
                </GroupBox>

                <!-- 验证错误信息 -->
                <Border Background="{StaticResource ErrorRedBrush}"
                      CornerRadius="4"
                      Padding="12,8"
                      Margin="0,20,0,0"
                      Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="请修正以下错误：" 
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Margin="0,0,0,4" />
                        <ItemsControl ItemsSource="{Binding ValidationErrors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                             Foreground="White"
                                             FontSize="12"
                                             Margin="0,2" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮栏 -->
        <Border Grid.Row="2" 
                Background="{StaticResource DarkBlueBrush}" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button Content="取消" 
                      Style="{StaticResource CancelButtonStyle}"
                      Click="CancelButton_Click" />
                <Button Content="{Binding SaveButtonText}" 
                      Style="{StaticResource DialogButtonStyle}"
                      Click="SaveButton_Click"
                      IsEnabled="{Binding CanSave}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
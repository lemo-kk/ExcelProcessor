<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="ExcelProcessor.WPF.Pages.UserManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:models="clr-namespace:ExcelProcessor.Models;assembly=ExcelProcessor.Models"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="用户管理">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <Border Grid.Row="0" Background="{StaticResource DarkBlueBrush}" Padding="24,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountGroup" 
                                       Width="32" 
                                       Height="32" 
                                       Foreground="{StaticResource CyberBlueBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0" />
                <TextBlock Text="用户管理" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- 统计卡片 -->
        <Grid Grid.Row="1" Margin="24,16,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 用户总数 -->
            <Border Grid.Column="0" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Padding="20,16" 
                  Margin="0,0,8,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="AccountMultiple" 
                                               Width="24" 
                                               Height="24" 
                                               Foreground="{StaticResource CyberBlueBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                        <TextBlock Text="用户总数" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="{Binding TotalUsers, StringFormat='{}{0} 个用户'}" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White" />
                </StackPanel>
            </Border>

            <!-- 管理员数量 -->
            <Border Grid.Column="1" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Padding="20,16" 
                  Margin="4,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ShieldAccount" 
                                               Width="24" 
                                               Height="24" 
                                               Foreground="{StaticResource NeonGreenBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                        <TextBlock Text="管理员" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="{Binding AdminCount, StringFormat='{}{0} 个管理员'}" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White" />
                </StackPanel>
            </Border>

            <!-- 普通用户数量 -->
            <Border Grid.Column="2" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Padding="20,16" 
                  Margin="4,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Account" 
                                               Width="24" 
                                               Height="24" 
                                               Foreground="{StaticResource CyberBlueBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                        <TextBlock Text="普通用户" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="{Binding UserCount, StringFormat='{}{0} 个用户'}" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White" />
                </StackPanel>
            </Border>

            <!-- 本月新增 -->
            <Border Grid.Column="3" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Padding="20,16" 
                  Margin="8,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="AccountPlus" 
                                               Width="24" 
                                               Height="24" 
                                               Foreground="{StaticResource HighlightPurpleBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                        <TextBlock Text="本月新增" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="{Binding NewUsersThisMonth, StringFormat='{}{0} 个新用户'}" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="2" Margin="24,16,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：用户列表 -->
            <Border Grid.Column="0" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 工具栏 -->
                    <Border Grid.Row="0" 
                          Background="{StaticResource DarkBlueBrush}" 
                          CornerRadius="8,8,0,0" 
                          Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 第一行：筛选控件 -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 搜索框 -->
                                <TextBox Grid.Column="0" 
                                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       materialDesign:HintAssist.Hint="搜索用户名、显示名称或邮箱..."
                                       Style="{StaticResource CustomTextBoxStyle}"
                                       Margin="0,0,12,0" />

                                <!-- 角色筛选 -->
                                <ComboBox Grid.Column="1" 
                                        SelectedValue="{Binding SelectedRoleFilter}"
                                        Style="{StaticResource CustomComboBoxStyle}"
                                        Width="100"
                                        Margin="0,0,12,0">
                                    <ComboBoxItem Content="所有角色" Tag="{x:Static models:UserRole.All}" />
                                    <ComboBoxItem Content="超级管理员" Tag="{x:Static models:UserRole.SuperAdmin}" />
                                    <ComboBoxItem Content="管理员" Tag="{x:Static models:UserRole.Admin}" />
                                    <ComboBoxItem Content="普通用户" Tag="{x:Static models:UserRole.User}" />
                                </ComboBox>

                                <!-- 添加用户按钮 -->
                                <Button Grid.Column="3" 
                                      Content="添加用户"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Click="AddUserButton_Click" />
                            </Grid>

                            <!-- 第二行：批量操作 -->
                            <Border Grid.Row="1" 
                                  Background="{StaticResource DarkGrayBrush}" 
                                  CornerRadius="0,0,8,8" 
                                  Padding="16,8"
                                  Visibility="{Binding CanPerformBulkOperations, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SelectedUsersCount, StringFormat='已选择 {0} 个用户'}" 
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,16,0" />
                                    
                                    <Button Content="批量启用" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Click="BulkEnableButton_Click"
                                          Margin="0,0,8,0" />
                                    
                                    <Button Content="批量禁用" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Click="BulkDisableButton_Click"
                                          Margin="0,0,8,0" />
                                    
                                    <Button Content="批量删除" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Click="BulkDeleteButton_Click"
                                          Foreground="{StaticResource ErrorRedBrush}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- 用户列表 -->
                    <DataGrid Grid.Row="2" 
                            ItemsSource="{Binding Users}"
                            SelectedItem="{Binding SelectedUser}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="True"
                            CanUserResizeColumns="True"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <!-- 选择列 -->
                            <DataGridTemplateColumn Header="" Width="40">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                Click="SelectAllCheckBox_Click" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}"
                                                Click="UserCheckBox_Click" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- 用户名 -->
                            <DataGridTextColumn Header="用户名" 
                                              Binding="{Binding Username}" 
                                              Width="120" />

                            <!-- 显示名称 -->
                            <DataGridTextColumn Header="显示名称" 
                                              Binding="{Binding DisplayName}" 
                                              Width="150" />

                            <!-- 邮箱 -->
                            <DataGridTextColumn Header="邮箱" 
                                              Binding="{Binding Email}" 
                                              Width="200" />

                            <!-- 角色 -->
                            <DataGridTextColumn Header="角色" 
                                              Binding="{Binding Role}" 
                                              Width="100" />

                            <!-- 状态 -->
                            <DataGridTemplateColumn Header="状态" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding IsEnabled, Converter={StaticResource BoolToStatusBrushConverter}}"
                                              CornerRadius="4"
                                              Padding="8,4">
                                            <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToStatusTextConverter}}"
                                                     Foreground="White"
                                                     FontSize="12"
                                                     HorizontalAlignment="Center" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- 创建时间 -->
                            <DataGridTextColumn Header="创建时间" 
                                              Binding="{Binding CreatedTime, StringFormat='yyyy-MM-dd HH:mm'}" 
                                              Width="140" />

                            <!-- 操作 -->
                            <DataGridTemplateColumn Header="操作" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="编辑"
                                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                                  Click="EditUserButton_Click"
                                                  Margin="0,0,4,0" />
                                            <Button Content="删除"
                                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                                  Click="DeleteUserButton_Click" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- 右侧：用户详情 -->
            <Border Grid.Column="1" 
                  Background="{StaticResource DarkGrayBrush}" 
                  CornerRadius="8" 
                  Margin="12,0,0,0"
                  Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <!-- 用户头像 -->
                        <Border Width="80" 
                              Height="80" 
                              Background="{StaticResource CyberBlueBrush}" 
                              CornerRadius="40"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="Account" 
                                                   Width="40" 
                                                   Height="40" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                        </Border>

                        <!-- 用户信息 -->
                        <TextBlock Text="{Binding SelectedUser.DisplayName}" 
                                 FontSize="20" 
                                 FontWeight="Bold" 
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,8" />

                        <TextBlock Text="{Binding SelectedUser.Username}" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20" />

                        <!-- 详细信息 -->
                        <StackPanel>
                            <TextBlock Text="详细信息" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="White"
                                     Margin="0,0,0,12" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                         Text="邮箱：" 
                                         Foreground="{StaticResource TextSecondaryBrush}" />
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding SelectedUser.Email}" 
                                         Foreground="White" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                         Text="角色：" 
                                         Foreground="{StaticResource TextSecondaryBrush}" />
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding SelectedUser.Role}" 
                                         Foreground="White" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                         Text="状态：" 
                                         Foreground="{StaticResource TextSecondaryBrush}" />
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding SelectedUser.IsEnabled, Converter={StaticResource BoolToStatusTextConverter}}" 
                                         Foreground="White" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                         Text="创建时间：" 
                                         Foreground="{StaticResource TextSecondaryBrush}" />
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding SelectedUser.CreatedTime, StringFormat='yyyy-MM-dd HH:mm'}" 
                                         Foreground="White" />
                            </Grid>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                         Text="备注：" 
                                         Foreground="{StaticResource TextSecondaryBrush}" />
                                <TextBlock Grid.Column="1" 
                                         Text="{Binding SelectedUser.Remarks}" 
                                         Foreground="White"
                                         TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page> 
<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ExcelProcessor.WPF.Controls.FilePathConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <Border Style="{StaticResource ConfigGroupStyle}">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="Folder" 
                                       Width="20" 
                                       Height="20" 
                                       Foreground="{StaticResource NeonGreenBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                <TextBlock Text="文件路径配置" 
                         Style="{StaticResource ConfigGroupTitleStyle}" 
                         VerticalAlignment="Center" />
            </StackPanel>
            
            <Border Style="{StaticResource ConfigItemContainerStyle}">
                <StackPanel>
                    <!-- 输入文件目录 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="输入文件目录"
                                 Style="{StaticResource ConfigItemLabelStyle}" />
                        
                        <Button Grid.Column="1"
                              x:Name="BrowseInputPathButton"
                              Content="浏览"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="8,4"
                              FontSize="11"
                              Click="BrowseInputPathButton_Click" />
                    </Grid>
                    
                    <TextBox x:Name="InputPathTextBox"
                           Text="{Binding InputPath}"
                           Style="{StaticResource FilePathTextBoxStyle}"
                           Margin="0,4,0,12"
                           materialDesign:HintAssist.Hint="输入文件目录路径" />
                    
                    <!-- 输出文件目录 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="输出文件目录"
                                 Style="{StaticResource ConfigItemLabelStyle}" />
                        
                        <Button Grid.Column="1"
                              x:Name="BrowseOutputPathButton"
                              Content="浏览"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="8,4"
                              FontSize="11"
                              Click="BrowseOutputPathButton_Click" />
                    </Grid>
                    
                    <TextBox x:Name="OutputPathTextBox"
                           Text="{Binding OutputPath}"
                           Style="{StaticResource FilePathTextBoxStyle}"
                           Margin="0,4,0,12"
                           materialDesign:HintAssist.Hint="输出文件目录路径" />
                    
                    <!-- 模板文件目录 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="模板文件目录"
                                 Style="{StaticResource ConfigItemLabelStyle}" />
                        
                        <Button Grid.Column="1"
                              x:Name="BrowseTemplatePathButton"
                              Content="浏览"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="8,4"
                              FontSize="11"
                              Click="BrowseTemplatePathButton_Click" />
                    </Grid>
                    
                    <TextBox x:Name="TemplatePathTextBox"
                           Text="{Binding TemplatePath}"
                           Style="{StaticResource FilePathTextBoxStyle}"
                           Margin="0,4,0,16"
                           materialDesign:HintAssist.Hint="模板文件目录路径" />
                    
                    <!-- 操作按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="CreateDefaultFoldersButton"
                              Content="创建默认目录"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Padding="12,6"
                              FontSize="12"
                              Margin="0,0,8,0"
                              Click="CreateDefaultFoldersButton_Click" />
                        
                        <Button x:Name="OpenInputFolderButton"
                              Content="打开输入目录"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="12,6"
                              FontSize="12"
                              Margin="0,0,8,0"
                              Click="OpenInputFolderButton_Click" />
                        
                        <Button x:Name="OpenOutputFolderButton"
                              Content="打开输出目录"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="12,6"
                              FontSize="12"
                              Click="OpenOutputFolderButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl> 
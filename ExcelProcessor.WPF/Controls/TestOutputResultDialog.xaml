<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ExcelProcessor.WPF.Controls.TestOutputResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="测试输出结果" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource MaterialDesignPaper}"
        BorderBrush="{StaticResource MaterialDesignDivider}"
        BorderThickness="1"
        TextElement.Foreground="{StaticResource MaterialDesignBody}">
    
    <Window.Resources>
        <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}"/>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{StaticResource CyberBlueBrush}"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="DetailItemStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="DetailLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource CyberBlueBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="DetailValueStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="{StaticResource MaterialDesignSelection}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题和状态 -->
        <Border Grid.Row="0" 
                Background="{StaticResource MaterialDesignCardBackground}"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock x:Name="StatusIcon" 
                               FontSize="28" 
                               Margin="0,0,15,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 输出类型信息 -->
                <TextBlock x:Name="OutputTypeText" 
                           Style="{StaticResource InfoTextStyle}"/>
            </StackPanel>
        </Border>
        
        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 错误信息 -->
                <Border x:Name="ErrorPanel" 
                        Background="{StaticResource MaterialDesignCardBackground}" 
                        BorderBrush="{StaticResource ErrorRedBrush}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" 
                               TextWrapping="Wrap" 
                               Foreground="{StaticResource ErrorRedBrush}"
                               FontSize="13"/>
                </Border>
                
                <!-- 详细信息 -->
                <Border x:Name="DetailsPanel"
                        Background="{StaticResource MaterialDesignCardBackground}"
                        BorderBrush="{StaticResource MaterialDesignDivider}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel x:Name="DetailsStackPanel">
                        <TextBlock Text="详细信息" 
                                   Style="{StaticResource HeaderTextStyle}"/>
                        
                        <!-- 详细信息内容将通过代码动态添加 -->
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <Border Grid.Row="2" 
                Background="{StaticResource MaterialDesignCardBackground}"
                BorderBrush="{StaticResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="OpenFileLocationButton"
                        Content="📁 打开文件位置"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,10,0"
                        Click="OpenFileLocationButton_Click"
                        Visibility="Collapsed"/>
                <Button x:Name="OkButton"
                        Content="确定"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource CyberBlueBrush}"
                        Foreground="White"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 